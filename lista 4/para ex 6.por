programa
{
inteiro num, soma = 0
	
	funcao inicio()
	{
		para(inteiro i = 1; i<=7; i++){
			escreva("digite o numero que voce dejesa somar:")
			leia(num)
			soma = soma + num
		}
		limpa()
		escreva("a somatoria dos seus 7 numeros foi:", soma)
	}
}
